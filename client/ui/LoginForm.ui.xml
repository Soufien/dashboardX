<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>

	</ui:style>
	<g:HTMLPanel>
		<b:Hero>
			<b:Heading size="2">Ooredoo Dasboard</b:Heading>
			<b:Paragraph>Cette application est developper dans le cadre d'un
				projet de fin d'etude chez Ooredoo</b:Paragraph>
		</b:Hero>
		<b:Row>
			<b:Column size="4" offset="5">
			    <b:WellForm ui:field="loginForm">
			        
					<b:ControlLabel>Identifiant :</b:ControlLabel>
					
					<b:TextBox  alternateSize="LARGE" b:id="login"
                            ui:field="loginBox" placeholder="Votre identifiant ..."  width="330px"
                            height="30px" />
					
					<b:ControlLabel>Mot de passe :</b:ControlLabel>
					
					<b:PasswordTextBox  width="330px"
                            alternateSize="LARGE" ui:field="passwordBox" placeholder="Password"
                            height="30px" />
					
					<b:HelpBlock>Pour des options avancée cliquez sur "Avancée".</b:HelpBlock>
					
					<b:SubmitButton addStyleNames="btn" ui:field="loginButton">S'identifier</b:SubmitButton>
				</b:WellForm>
			</b:Column>
		</b:Row>

	</g:HTMLPanel>
</ui:UiBinder> 